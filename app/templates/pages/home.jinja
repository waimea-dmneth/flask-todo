{#=====================================================
  Home page
  - Hero style greeting banner
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo

{% endblock %}


{% block content %}

    <h1>Active Tasks</h1>
    <p>
        {% for task in aTasks %}
                <article>
                    <h3> {{ task.name }}</h3>
                </article>
        {% else %}
            <h2> No Active Tasks</h2>
        {% endfor %}
    </p>
        
    <h1>Completed Tasks</h1>
    <p>
        {% for task in inactiveTasks %}
            <p></p>
        {% endfor %}
    </p>
    

{% endblock %}

